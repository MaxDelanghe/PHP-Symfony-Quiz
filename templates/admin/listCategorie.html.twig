{% extends 'base.html.twig' %}

{% block title %}Modifier un utilisateur{% endblock %}

{% block body %}
    <table class="table table-striped table-dark">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nom de la Categorie du quiz</th>
            <th scope="col">Image</th>
            <th scope="col">Presentation</th>
            <th scope="col">action</th>
        </tr>
        </thead>
        <tbody>
    {% set i = 1 %}
    {% for categorie in categories %}
        <tr>
            <th scope="row">{{i}}</th>
            <td>{{  categorie.name   }}</td>
            <td>{{  categorie.image   }}</td>
            <td>{{  categorie.presentation   }}</td>
            <td><a href="{{ path('admin_edit_categorie', {'id': categorie.id}) }}">editer</a>
            <a style="color: red;" href="{{ path('admin_erase_categorie', {'id': categorie.id}) }}">suprimer</a></td>
        </tr>
        {% set i = i + 1 %}
    {% endfor %}
    </tbody>
    </table>
{% endblock %}
