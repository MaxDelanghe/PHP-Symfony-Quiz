{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div style="margin:auto;"class="container">
    <h1>Inscription</h1>

    {{ form_start(registrationForm) }}

    <div style="padding:20px;" class="form-control">
        {{ form_row(registrationForm.email, {'attr': {'placeholder': 'email@example.com'}}) }}
    </div>
    <div style="padding:20px;"class="form-control">
        {{ form_row(registrationForm.username, {'attr': {'placeholder': 'Votre nom d\'utilisateur'}}) }}
    </div>
    <div style="padding:20px;"class="form-control">
        {{ form_row(registrationForm.pseudo, {'attr': {'placeholder': 'Votre pseudo'}}) }}
    </div>
    <div style="padding:20px;"class="form-control">
        {{ form_row(registrationForm.plainPassword, {label: 'Password','attr': {'placeholder': 'entrez votre mot de passe'}})}}
    </div>

        <button type="submit" class="btn btn-info">Register</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
