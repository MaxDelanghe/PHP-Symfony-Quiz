{% extends 'base.html.twig' %}

{% block title %}Mise a jour{% endblock %}

{% block body %}
    <h3>Mise a jour des info profil</h3>

    {{ form_start(form) }}
        {{ form_row(form.username, {'attr': {'placeholder': 'Votre nom d\'utilisateur'}}) }}
        {{ form_row(form.pseudo, {'attr': {'placeholder': 'Votre pseudo'}}) }}
